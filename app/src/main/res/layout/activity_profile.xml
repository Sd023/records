<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".gridviewActivities.ProfileActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_centerInParent="true"
        android:layout_width="350dp"
        android:layout_height="400dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="95dp"
                android:layout_marginTop="5dp"
                android:contentDescription="Profile Image" />

            <TextView
                android:id="@+id/view_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/nexa_bold"
                android:text="Name: "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image"
                android:textSize="20sp"
                android:fontFamily="@font/nexa_light"
                android:layout_toEndOf="@+id/view_text1"
                android:layout_marginTop="50dp"
                android:layout_marginStart="2dp"
                android:text=""/>

            <EditText
                android:id="@+id/name_update_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image"
                android:layout_marginStart="2dp"
                android:layout_marginTop="40dp"
                android:layout_toEndOf="@+id/view_text1"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view_text2"
                android:text="Email: "
                android:textSize="20sp"
                android:fontFamily="@font/nexa_bold"
                android:layout_below="@+id/view_text1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_update_text"
                android:text=""
                android:layout_toEndOf="@+id/view_text2"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nexa_light"
                android:textSize="20sp"
                android:layout_marginStart="2dp"/>

            <EditText
                android:id="@+id/email_update"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_update_text"
                android:layout_marginStart="6dp"
                android:visibility="invisible"
                android:layout_toEndOf="@+id/view_text2"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress" />



        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>